<!-- home page for manufactures section -->
<% include ../partials/header.ejs %>

    <h1><%= title %></h1>

    <% if(user) { %>
        <a href="/manufacturers/add">Add a New Manufacturer</a>
    <% } %>

    <table class="table table-striped table-hover">
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Year Founded</th>
            <% if(user) { %>
                <th>Actions</th>
            <% } %>
        </tr>
        <% for(let i = 0; i < manufacturers.length; i++) { %>
            <tr>
                <td><%= manufacturers[i].name %></td>
                <td><%= manufacturers[i].country %></td>
                <td><%= manufacturers[i].yearFounded %></td>
                <% if(user) { %>
                    <td>
                        <a href="/manufacturers/edit/<%= manufacturers[i]._id %>" class="btn btn-info">Edit</a>
                        <a href="/manufacturers/delete/<%= manufacturers[i]._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                    </td>
                <% } %>
            </tr>
        <% } %>
    </table>

<% include ../partials/footer.ejs %>