<% include ../partials/header.ejs %>

    <h1><%= title %></h1>

    <form method="post">
        <fieldset class="form-group">
            <label class="control-label col-md-2" for="name">Name: *</label>
            <input type="text" name="name" id="name" required value="<%= manufacturer.name %>"/>
        </fieldset>
        <fieldset class="form-group">
            <label class="control-label col-md-2" for="country">Country: *</label>
            <input type="text" name="country" id="country" required value="<%= manufacturer.country %>"/>
        </fieldset>
        <fieldset class="form-group">
            <label class="control-label col-md-2" for="yearFounded">Year Founded: *</label>
            <input type="number" name="yearFounded" id="yearFounded" required value="<%= manufacturer.yearFounded %>"/>
        </fieldset>
        <button class="offset-md-2 btn btn-primary">Save</button>
    </form>

<% include ../partials/footer.ejs %>